---
import Layout from "../layout/index.astro";
---

<Layout>
  <div class="container mt-5">
    <!-- Users Section -->
    <h2 class="mb-3">Usuários</h2>
    <form id="user-form" class="mb-3 d-flex w-100">
      <input type="email" class="form-control" placeholder="email" required />

      <button type="submit" class="btn btn-outline-success">Adicionar</button>
    </form>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Usuário</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody id="user-table">
        <tr>
          <th scope="row">1</th>
          <td>user1</td>
          <td>
            <button class="btn btn-secondary btn-sm me-2">Editar</button>
            <button class="btn btn-danger btn-sm">Deletar</button>
          </td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>user2</td>
          <td>
            <button class="btn btn-secondary btn-sm me-2">Editar</button>
            <button class="btn btn-danger btn-sm">Deletar</button>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- Animals Section -->
    <h2 class="mb-3">Animais</h2>
    <form id="animal-form" class="mb-3">
      <input type="text" class="form-control" placeholder="nome" required />
      <select name="" id=""></select>

      <button type="submit" class="btn btn-outline-success">Adicionar</button>
    </form>
    <table class="table table-striped"></table>

    <!-- Games Section -->
    <h2 class="mb-3">Jogos</h2>
    <form id="game-form" class="mb-3">
      <!-- ... similar to the user form, adjusted for game data ... -->
    </form>
    <table class="table table-striped">
      <!-- ... similar to the user table, adjusted for game data ... -->
    </table>
  </div>

  <script>
    // Sample JavaScript to handle form submissions and table updates
    document
      .getElementById("user-form")
      .addEventListener("submit", function (e) {
        e.preventDefault();
        const username = e.target[0].value;
      });
    // ... similar JavaScript for handling animal and game forms ...
  </script>
</Layout>
